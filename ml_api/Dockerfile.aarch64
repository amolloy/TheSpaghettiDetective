FROM jetsistant/cuda-jetpack:4.2.1-runtime
WORKDIR /app
EXPOSE 3333
RUN rm -rf /etc/apt/sources.list.d/cuda.list && \
	apt update
ARG DEBIAN_FRONTEND=noninteractive
RUN apt install --no-install-recommends -y python-opencv python3-opencv && \
	apt install --no-install-recommends -y git sudo libsm6 libxrender1 libfontconfig1 python3-pip python3-setuptools vim ffmpeg wget curl libgstreamer-plugins-base1.0-0 libgstreamer1.0-0 libgtk2.0-0 && \
	rm -rf /var/lib/apt/lists/*
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3 10 && \
	update-alternatives --install /usr/bin/pip pip /usr/bin/pip3 10
RUN git clone https://github.com/amolloy/buildOpenCV.git && \
	cd buildOpenCV && \
	./buildOpenCV.sh -i /usr && \
	cd ..

ADD . /app
RUN cp bin/model_$(uname --m).so bin/model.so && \
	cp bin/model_gpu_$(uname --m).so bin/model_gpu.so

RUN pip install --upgrade pip
RUN pip install -r requirements.txt

RUN wget --quiet -O model/model.weights $(cat model/model.weights.url | tr -d '\r')

ENV LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH
